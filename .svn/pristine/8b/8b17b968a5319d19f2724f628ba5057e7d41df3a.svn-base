<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_upper_background" >

            <TextView
                android:id="@+id/mMainBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/main_back_selector"
                android:gravity="center"
                android:text="@string/main_back"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/main_sms_forward"
                android:textColor="#ffffff"
                android:textSize="20dip" />
        </RelativeLayout>
        <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="horizontal">
            <ImageView 
		    android:id="@+id/mMultiChooseButton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:layout_marginRight="20dip"
		    android:background="@drawable/contacts"
		    />
        <EditText
            android:id="@+id/mInputNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/mMultiChooseButton"
            android:layout_centerVertical="true"
            android:digits="1234567890."
            android:hint="@string/send_hint"
            android:singleLine="true"
            android:background="@drawable/bg_sms_input"
            android:padding="3dip" />
    </RelativeLayout>
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <com.ginwave.smshelper.GameView
                android:id="@+id/mHolidayGridGameView" 
                android:layout_width="fill_parent"
                android:layout_height="280dip"
                />
            <EditText 
                android:id="@+id/mSubject"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mHolidayGridGameView"
                android:background="@drawable/bg_sms_input"
            	android:padding="3dip"
            	android:hint="@string/mms_subject"
            	android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/mSubject"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip">
            <TextView 
                android:id="@+id/mHolidayGridSendMms"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sms_forward_login_selector"
                android:text="@string/send"
                android:textColor="#ffffff"
                android:textSize="20dip"
                android:layout_weight="1"
                android:gravity="center"
                />
            <TextView 
                android:id="@+id/mHolidayGridShareMms"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sms_forward_login_selector"
                android:text="@string/set_share"
                android:textColor="#ffffff"
                android:textSize="20dip"
                android:layout_weight="1"
                android:gravity="center"
                />
            </LinearLayout>
        </RelativeLayout>
     </ScrollView>
</LinearLayout>